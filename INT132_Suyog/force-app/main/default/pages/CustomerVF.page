<apex:page Controller="customer_page" lightningStylesheets="true" title="Create Customer" sidebar="false" docType="html-5.0" >
    <style>
        html {
        font-size: 15px;
        }

        h1 {
        font-size: 15px;
        }

        h2 {
        font-size: 12px;
        }
        
        .dataTable{
        border-radius: 10px;
        }

        .dataTable  th{
		
        padding: 11px 2px 10px 5px;
        }

        .dataTable td {

        padding: 5px 2px 5px 5px;

        }
        #ParentDiv input,
        #ParentDiv select {
        margin-right: 5px;
        border-radius: 10px;
        }
        
        #createNewCustomer{
        margin: 2rem;
        }
        
        
    </style>
     <apex:form id="createCustomerForm">
       <apex:outputPanel styleClass="dataTable" >
            <apex:pageBlock >
                <table id = "ParentDiv" border="0">
                     <tr>
                        <td>
                           Name:
                        </td>
                        <td width="10">
                            <apex:inputText value="{!customerName}" id="name" />
                         </td>
                    </tr>
                     <tr>
                        <td>
                           Phone:
                        </td>
                        <td width="10">
                            <apex:inputText value="{!customerPhone}" id="phone" />
                         </td>
                    </tr>
                     <tr>
                        <td>
                           Date Of Birth:
                        </td>
                        <td width="10">
                            <apex:input type="date" value="{!customerDOB}"/>
                         </td>
                    </tr>
                    <tr>
                        <td>
                           Address:
                        </td>                        
                    </tr>
                    <tr>
                    	<td>
                           Street:
                        </td>
                        <td width="10">
                            <apex:inputText value="{!customerStreet}" id="Street" />
                        </td>

                        <td>
                           City:
                        </td>
                        <td width="10">
                            <apex:inputText value="{!customerCity}" id="City" />
                        </td>

                            <td>
                           Postal Code:
                        </td>
                        <td width="10">
                            <apex:inputText value="{!customerCode}" id="PostalCode" />
                        </td>
                        <td>
                           State:
                        </td>
                        <td width="10">
                            <apex:inputText value="{!customerState}" id="State" />
                        </td>
                        <td>
                           Country:
                        </td>
                        <td width="10">
                            <apex:inputText value="{!customerCountry}" id="Country" />
                        </td>
                    </tr>

                </table>
                <apex:commandButton value="Create" id="createNewCustomer" action="{!createNewCustomer}" />
           </apex:pageBlock>
     </apex:outputPanel>
    </apex:form>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
